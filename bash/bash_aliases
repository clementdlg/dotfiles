# Standard aliases
alias ll="ls -al"
alias docker="sudo docker"
alias neofetch="fastfetch"
alias sl="ls"
alias vim="$EDITOR"
alias nano="$EDITOR"

# Conf file
alias vawesome="$EDITOR ~/.config/awesome/rc.lua"
alias nvimrc="$EDITOR ~/.config/nvim/init.lua"
alias vimrc="$EDITOR ~/.config/vim/vimrc"

alias distro="cat /etc/os-release | grep -i 'pretty' | cut -d= -f2"

# # Speed
alias st="git status"
alias gd="git diff HEAD"
alias wgd="sudo wg-quick down"
alias wgu="sudo wg-quick up"

# Basic color support
if [ -x /usr/bin/dircolors ]; then
	test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"

	alias ip='ip -c'
	alias grep='grep --color=auto'
	alias ls="ls --color=always"

	# eza aliases
	which eza &>/dev/null
	if [[ $? -eq 0 ]]; then
		alias l="eza --color=always --icons"
		alias la="eza --color=always --icons --all"
		alias ll="eza --color=always --icons --all --long"
	fi

	# replace cat with bat
	which bat &>/dev/null
	if [[ $? -eq 0 ]]; then
		alias cat="bat -pp --theme OneHalfDark"
	fi

fi
